<!DOCTYPE html>
<html>
  <head>
    <title>Sustyle</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
  		<div class="notification is-dark">
        <button class="delete"></button>
  			<p class="notice"><%= notice %></p>
  		</div>
  	<% end %>
  	<% if flash[:alert] %>
  		<div class="notification is-danger global-notification">
        <button class="delete"></button>
  			<p class="alert"><%= alert %></p>
  		</div>
  	<% end %>
     <nav class="navbar is-white">
      <div class="navbar-brand">
        <%= link_to root_path, class: "navbar-item" do %>
        <%= image_tag("sustyle-black.png", alt: "sustyle logo", :size => "120x140") %>
        <% end %>
      </div>
      <div id="navbarExample" class="navbar-menu is-justify-content-center">
        <div class="navbar">
          <div class="navbar-item button is-white is-align-self-center">
            <%= link_to 'HOME', new_user_session_path, class: "button is-white" %>
          </div>
          <div class="navbar-item button is-white is-align-self-center">
            <%= link_to 'FOOD', new_user_session_path, class: "button is-white" %>
          </div>
          <div class="navbar-item button is-white is-align-self-center">
            <%= link_to 'ENERGY', new_user_session_path, class: "button is-white" %>
          </div>
          <div class="navbar-item button is-white is-align-self-center">
            <%= link_to 'FASHION', new_user_session_path, class: "button is-white" %>
          </div>
          <div class="navbar-item button is-white is-align-self-center">
            <%= link_to 'ECONOMICS', new_user_session_path, class: "button is-white" %>
          </div>
          <div class="navbar-item button is-white is-align-self-center">
            <%= link_to 'TECHNOLOGY', new_user_session_path, class: "button is-white" %>
          </div>
        </div>
			  
			</div>
      <div class="navbar-end">
          <div class="navbar-item">
            <div class="field is-grouped is-mobile">
              <% if user_signed_in? %>
                <p class="control">
                  <%= link_to 'New Article', new_article_path, class: "button is-danger is-inverted" %>
                </p>
                <p class="control">
                  <%= link_to current_user.name, edit_user_registration_path, class: "button is-dark" %>
                </p>
                <p>
                  <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"button is-dark" %>
                </p>
              <% else %>
              <p class="control">
                <%= link_to 'LOGIN', new_user_session_path, class: "button is-white" %>
              </p>
              <p class="is-align-self-center">|</p>
              <p class="control">
                <%= link_to 'REGISTER', new_user_registration_path, class: "button is-white" %>
              </p>
              <% end %>
              </div>
            </div>
				</div>
    </nav>
    
    <%= yield %>
  </body>
</html>
