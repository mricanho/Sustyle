<section class="hero is-large is-info">
  <p id="notice"><%= notice %></p>
  <div class="container">
    <div class="hero-body p-6">
      <div class="card">
        <div class="card-image">
          <figure class="image is-5by4">
            <img src='#{display_photo(article)}' alt="Placeholder image">
          </figure>
        </div>
        <div class="card-content">
          <p class="title">
            <%= @article.title %>
          </p>
          <p class="subtitle">
            Jeff Atwood
          </p>
          <div class="content">
            <%= @article.text %>
          </div>
        </div>     
    </div>
    

  </div>
    
  
</section>


